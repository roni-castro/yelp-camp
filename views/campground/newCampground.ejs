<% include ../partials/header.ejs %>
    <div class="container justify-content-center">
        <h1 class="text-center">Create a new campground</h1>
        <form method="POST" action="/campgrounds" class="form-center-wd-50">
           <div class="form-row">
                <div class="form-group">
                     <label>Camp name:</label>
                    <input name="camp[name]" class="form-control" type="text" placeholder="Type the camp name"></input>
                </div>
                <div class="form-group">
                     <label>Price:</label>
                    <input name="camp[price]" class="form-control" type="number" min="0" max="100000000" step="0.01" placeholder="0.00"></input>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Photo url:</label>
                    <input name="camp[photo]" class="form-control" type="text" placeholder="Type the photo url"></input>
                </div>
           </div>
           <div class="form-row">
               <div class="form-group">
                    <label>Description:</label>   
                    <textarea class="form-control" rows="6" name="camp[desc]" placeholder="Description"></textarea>
                </div>
           </div>
           <div class="text-center">
               <button type="submit" class="btn btn-primary btn-block">Create</button>
               <div class="text-left">
                    <a href="/campgrounds">Back</a>
               </div>
           </div>
        </form>
    </div>

<% include ../partials/footer.ejs %>